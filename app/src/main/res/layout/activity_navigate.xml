                        android:textStyle="bold"
                        android:textColor="@color/basic_500"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginStart="7dp"
                        android:text="Right"
                        android:textSize="28dp"
                        android:lineHeight="42dp"
