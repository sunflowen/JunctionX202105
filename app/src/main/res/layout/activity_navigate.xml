        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="78dp"
                    android:layout_height="78dp">
                    <Button
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:paddingStart="16dp"
                        android:background="@drawable/yellow_transparent_circle"
                        android:onClick="ListClicked"/>
                    <ImageView
                        android:src="@drawable/ic_list_1"
                        android:layout_width="39dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/start_list"
                    android:gravity="center_horizontal"
                    android:textSize="18dp"
                    android:lineHeight="27dp"
                    android:textStyle="bold"
                    android:textColor="@color/basic_bright"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="78dp"
                    android:layout_height="78dp">
                    <Button
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:paddingStart="16dp"
                        android:background="@drawable/yellow_transparent_circle"
                        android:onClick="OverviewClicked"/>
                    <ImageView
                        android:src="@drawable/ic_overview"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/start_overview"
                    android:gravity="center_horizontal"
                    android:textSize="18dp"
                    android:lineHeight="27dp"
                    android:textStyle="bold"
                    android:textColor="@color/basic_bright"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="78dp"
                    android:layout_height="78dp">
                    <Button
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:paddingStart="16dp"
                        android:background="@drawable/red_transparent_circle"
                        android:onClick="EndClicked"/>
                    <ImageView
                        android:src="@drawable/ic_end"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/start_end"
                    android:gravity="center_horizontal"
                    android:textSize="18dp"
                    android:lineHeight="27dp"
                    android:textStyle="bold"
                    android:textColor="@color/basic_bright"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
